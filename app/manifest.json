{
    "manifest_version": 2,
    "name": "Fides",
    "description": "Own your identity on the web.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["boot.js"]
        }],
        "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ],
     "web_accessible_resources": ["fides.js"]
}